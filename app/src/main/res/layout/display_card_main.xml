<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="6dp"
    app:strokeColor="#B3AAAA"
    app:strokeWidth="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journal"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/journal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="essin"
            android:id="@+id/essin"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Research Type"
            android:layout_below="@+id/journal"
            android:id="@+id/researchType"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/researchType"
            android:id="@+id/title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:id="@+id/authLayout"
            android:layout_marginStart="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author Name: "
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:id="@+id/Author"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Author"
            android:id="@+id/AuthorList"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:text="name, name , name"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/authLayout"
            android:id="@+id/abstractData"
            android:maxLines="4"
            android:drawableBottom="@drawable/down_arrow"
            android:layout_margin="10dp"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="publication Date"
            android:layout_below="@+id/abstractData"
            android:layout_margin="10dp"
            android:id="@+id/publicationDate"/>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>